{

  "manifest_version": 2,
  "name": "DeadLine",
  "version": "0.5",

  "description": "Keeps an eye on your deadlines, like exams or other important events that you don't want to think about and rather procrastinate.",
  "homepage_url": "https://github.com/basti42/DeadLine-Extension",

  "browser_specific_settings": {
     "gecko": {
       "id": "basti.addon.dev@gmail.com"
     }
   },

  "background" : {
    "scripts":["background_scripts/background.js"]
  },

  "icons": {
    "48": "icons/icons_48.png",
    "96": "icons/icons_96.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon" : "icons/icons_32.png",
    "default_title" : "DeadLine"
  }

}
